            <%@skill.errors[:admin_id].each do | error_message| %>
                <li> <%= error_message%> </li>
            <% end%>
        </ul> 
    <% end %>
        <%= skill_form.submit%>

        <%# <script src=application.js> </script> %>

            <% end  %>

    </section>

