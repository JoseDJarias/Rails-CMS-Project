        <br>
        <%= skill_form.label :description %>
        <%= skill_form.text_field :skill_description %>

    <% if @skill.errors[:skill_description].present?%>
        <ul class = 'error-list'>
            <%@skill.errors[:skill_description].each do | error_message| %>
                <li> <%= error_message%> </li>
            <% end%>
        </ul> 
    <% end %>
        <br>
        <br>

        
        <%= skill_form.label :id %>
        <%= skill_form.text_field :admin_id %>

    <% if @skill.errors[:admin_id].present?%>
