<div class='flash-error'>
        <% if flash[:error].present?%>
            <%= flash[:error]%>
        <% end %>
</div>


<% if skill.blank? %>
    <strong>No hay skills aun</strong>

    <% elsif view == 'new' %>
    <section  class= 'form-skills'>

    <%= form_with(model: @admin_skill, url: admin_skills_path) do |skill_form| %>

        <%= label_tag :skill_type, "Skill Type" %>
        <%= skill_form.select :skill_type, options_for_select([['soft'], ['hard']]) %>
        <% if @skill.errors[:skill_type].present?%>
        <ul class = 'error-list'>
            <%@skill.errors[:skill_type].each do | error_message| %>
                <li> <%= error_message%> </li>
            <% end%>
        </ul> 
